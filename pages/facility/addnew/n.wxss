/*搜寻到蓝牙  */
.show_bg{
    background: #fff;
}
.an_titBg{
    padding: 34rpx 30rpx;
    position: relative;
}

.an_titBg .an_tit{
    display: block;
    position: relative;
    font-size: 32rpx;
}
.an_titBg .an_tit view{
    width: 6rpx;
    height: 30rpx;
    background: #1bb1fe;
    display: inline-block;
    margin-right: 12rpx;
    vertical-align: middle;
    margin-top: -4rpx;
}
.add_l{
    display: flex;
    justify-content: flex-start;
}
.add_li{
    position: relative;
}
.add_item{
    padding: 30rpx;
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.an_titBg:after{
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    height: 1px;
    border-bottom: 1px solid #e5e5e5;
    color: #e5e5e5;
    transform-origin: 0 100%;
    transform: scaleY(0.5);
}
.add_li:after{
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    height: 1px;
    border-bottom: 1px solid #e5e5e5;
    color: #e5e5e5;
    transform-origin: 0 100%;
    transform: scaleY(0.5);
}
