/*设计排版  */

 .v_items{
    display: flex;
    justify-content: flex-start;
    padding: 34rpx;
    position: relative;
    background: #fff;
    align-items: center;
    align-content: center;
    font-size: 22rpx;
}
.v_items:after{
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;   
    height: 1px;
    border-bottom: 1px solid #e5e5e5;
    color: #e5e5e5;
    transform-origin: 0 100%;
    transform: scaleY(0.5);
}
.v_items video{
    width: 320rpx;
    height: 184rpx;
    display: inline-block;
}
.v_left,.v_right{
    height: 184rpx;
}
.v_right{
    margin-left: 24rpx;
}
.tit_v{
     font-size: 32rpx;
     
}
.infro_v{
    overflow: hidden;  
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    color: #999;
    margin-top: 6rpx;
}

.type_v text{
    color: #30b8fd;
}   
.suit_v{
    margin-top: 4rpx;
}
.v_icons{
    position: absolute;
    bottom: 34rpx;
}
