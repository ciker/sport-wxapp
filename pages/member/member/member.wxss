
.top_bg{
    padding: 30rpx 0 40rpx 0;
    background-image:-webkit-linear-gradient(to top,  #0ce2da ,#1cb1ff);
    background-image:linear-gradient(to top, #0ce2da ,#1cb1ff);
    color: #fff;
}
.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.noshow{
    display: none;
}
.name_in{
    font-size: 34rpx;
    padding: 10rpx 0 20rpx;
}
.img_box{
    display: flex;
    height: 166rpx;
    width: 166rpx;
    margin: 15rpx 0;
    justify-content: center;
    align-items: center;
    border: solid 1px #fff;
    border-radius: 50%;
}
.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.total_d{
    padding: 0 30rpx;
    margin-top: 20rpx;
    display: flex;
    justify-content: space-around;
    font-size: 24rpx;
}
.t_lists{
    display: block;
    flex: 3;
    text-align: center;
    position: relative;
}
.t_lists:after{
    content: " ";
    position: absolute;
    right: 0;
    top: 0;
    width: 1px;
    bottom: 0;
    border-right: 1px solid #e5e5e5;
    color: #e5e5e5;
    transform-origin: 100% 0;
    transform: scaleX(0.5);
}
.t_lists:last-child:after{
    border-right:none;
}
.total_d .t_num{
    padding-top: 16rpx;
    font-size: 22rpx;
}
.total_d .t_num text{
    font-size: 36rpx;
}

/*中间栏目  */

.his_list{
    position: relative;
    padding: 30rpx 30rpx;
    background: #fff;
    display: flex;
    justify-content: space-between;
}
.color_b .list_r{
    color: #19b0ff;
}
.line_di{
    margin-top: 20rpx;
}
.his_list:after,.an_list:after{
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    height: 1px;
    border-bottom: 1px solid #e5e5e5;
    color: #e5e5e5;
    transform-origin: 0 100%;
    transform: scaleY(0.5);
}

.list_l,.list_r{
    display: inline-block;
}
.list_r{
    color: #999;
    font-size: 24rpx;
    position: relative;
}
.list_r:after{
    content: "";
    display: inline-block;
    width: 20rpx;
    height: 20rpx;
    border-right: 2rpx solid #ccc;
    border-bottom: 2rpx solid #ccc;
    -webkit-transform: rotate(-45deg);
    transform: rotate(-45deg);
    font-size: 0;
    margin-left: 15rpx;
}
.s_nolink .list_r:after{
    width: 0;
    height: 0;
}

.list_r text:first-child{
    font-size: 40rpx;
    color: #f65e51;
}
.list_r text:last-child{
    color: #f65e51;
}