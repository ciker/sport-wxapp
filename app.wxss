/**app.wxss**/
page {
  background-color: #f5f5f5;
  color: #333;
}

.btn-confirm{
  color: #08b9c1;
}
.container,.index_box{
    font-size: 30rpx;
    color: #333;
    font-family:"Hiragino Sans GB W3","microsoft yahei","WenQuanYi Micro Hei";
    width: 100%;
    min-height: 100%;
    padding-bottom: 60rpx;
    background: #f5f5f5;
}

/*箭头*/
.arr_ritht {
    content: "";
    display: inline-block;
    width: 20rpx;
    height: 20rpx;
    border-right: 2rpx solid #ccc;
    border-bottom: 2rpx solid #ccc;
    -webkit-transform: rotate(-45deg);
    transform: rotate(-45deg);
    font-size: 0;
    margin-left: 20rpx;
}
.arr_left {
    content: "";
    display: inline-block;
    width: 20rpx;
    height: 20rpx;
    border-top: 2rpx solid #ccc;
    border-left: 2rpx solid #ccc;
    -webkit-transform: rotate(-45deg);
    transform: rotate(-45deg);
    font-size: 0;
    margin-left: 0.25rem;
}

/*1px问题*/
.setTopLine {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1px;
    border-top: 1px solid #e5e5e5;
    color: #e5e5e5;
    transform-origin: 0 0;
    transform: scaleY(0.5);
}

.setBottomLine {
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    height: 1px;
    border-bottom: 1px solid #e5e5e5;
    color: #e5e5e5;
    transform-origin: 0 100%;
    transform: scaleY(0.5);
}

.setLeftLine {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    width: 1px;
    bottom: 0;
    border-left: 1px solid #e5e5e5;
    color: #e5e5e5;
    transform-origin: 0 0;
    transform: scaleX(0.5);
}

.setRightLine {
    content: " ";
    position: absolute;
    right: 0;
    top: 0;
    width: 1px;
    bottom: 0;
    border-right: 1px solid #e5e5e5;
    color: #e5e5e5;
    transform-origin: 100% 0;
    transform: scaleX(0.5);
}
.setBorderLine{
      content: "";
      box-sizing: border-box;
      position: absolute;
      width: 200%;
      height: 200%;
      left: 0;
      top: 0;
      border-radius: 8px;
      border:1px solid #999;
      -webkit-transform:(scale(0.5));
      -webkit-transform-origin: 0 0;
      transform:(scale(0.5));
      transform-origin: 0 0;
}
